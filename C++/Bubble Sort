
void bubbleSort(int arr[], int n) {

  for (int i = 0; i < n-1; i++) {
    //for round 1 to n-1
    bool swapped = false;
    // process element till n-i th index
    for (int j = 0; j < n - i; j++) {
      if (arr[j] > arr[j + 1]) {
        swap(arr[j], arr[j + 1]);
        swapped = true;
        
      }
    }
    if(swapped == false){
      //already sorted
      break; 
    }
   
  }
}


 
